<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Information"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:drawableLeft="@drawable/username_logo"
        android:drawablePadding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"/>

    <EditText
        android:id="@+id/editInfo_editText_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:drawableLeft="@drawable/username_logo"
        android:drawablePadding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Address"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:drawableLeft="@drawable/location2"
        android:drawablePadding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_birthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birthdate"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/birthdate_logo"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_placeOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place of Birth"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/gender"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/editInfo_editText_civilStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Civil Status"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/civil_status"
        android:drawablePadding="10dp"/>

</LinearLayout>